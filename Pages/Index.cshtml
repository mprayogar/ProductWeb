@page
@model ProductWeb.Pages.IndexModel
@{
    ViewData["Title"] = "Daftar Produk";
}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}



<h1>Daftar Produk</h1>

<form method="get" class="mb-3">
    <input type="text" name="SearchKeyword" value="@Model.SearchKeyword" placeholder="Cari produk..." class="form-control" style="width: 250px; display:inline-block;" />
    <input type="number" step="0.01" name="MinPrice" value="@Model.MinPrice" placeholder="Harga Min" class="form-control ml-2" style="width: 150px; display:inline-block;" />
    <input type="number" step="0.01" name="MaxPrice" value="@Model.MaxPrice" placeholder="Harga Max" class="form-control ml-2" style="width: 150px; display:inline-block;" />
    <button type="submit" class="btn btn-primary ml-2">Filter</button>
    <a href="/Index" class="btn btn-secondary">Clear Filter</a>
</form>


<a asp-page="/Create">+ Tambah Produk</a>

<table class="table">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Description</th>
            <th>Harga</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>
                    <a asp-page="/Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Hapus produk ini?')">Delete</button>
                    </form>
                </td>
            </tr>
        }

        
    </tbody>
</table>
